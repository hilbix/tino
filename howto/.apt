#!/bin/bash
# https://raw.githubusercontent.com/hilbix/tino/master/howto/.apt

fgrep -vxf /etc/apt/apt.conf.d/99tino >> /etc/apt/apt.conf.d/99tino <<'EOF'
Acquire::PDiffs "false";
EOF

rm -f /var/lib/apt/lists/partial/*

apt-get autoclean
apt-get update
apt-get upgrade

for a in /proc/[0-9]*
do
        grep -v /dev/zero "$a/maps" | grep -q deleted &&
        echo "${a#/proc/} $(basename "$(readlink -m "$a/exe")")"
done | sort -k2

find /etc -name '*.*-dist'
